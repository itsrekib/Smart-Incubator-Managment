<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/green_Indicator_Color"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image inside card with corner radius -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="100dp"
                android:layout_height="110dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    android:contentDescription="Incubator Image"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Right Side Info -->
            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/imageCard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imageCard"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/incubatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incubator Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/incubatorBuiltCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Total Built Cost: ₹200"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/transportCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Trasport Cost: ₹20"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/sellingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Selling Price: ₹5000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/sellingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Selling Date"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profite"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/imageCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Customer Details at bottom -->
            <TextView
                android:id="@+id/customerDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Customer Details"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/profit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
